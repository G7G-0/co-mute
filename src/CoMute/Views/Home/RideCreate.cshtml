@{
    ViewBag.Title = "RideCreate"; // Create Ride Opportunity form
}

<form id="ridesCreate">
    <h2>Add transport opportunity</h2>

    <div id="error" class="row row-margin hidden">
        <div class="col-md-4 col-md-offset-4 alert alert-danger">
            <p></p>
        </div>
    </div>

    <div class="form-group">
        <label for="departure">Departure Time</label>
        <input type="datetime" id="departure" class="form-control" placeholder="Departure Time" required>
    </div>

    <div class="form-group">
        <label for="arrival">Arrival Time</label>
        <input type="datetime" id="arrival" class="form-control" placeholder="Arrival Time" required>
    </div>

    <div class="form-group">
        <label for="origin">Origin</label>
        <input type="text" id="origin" class="form-control" placeholder="Origin" required>
    </div>

    <div class="form-group">
        <label for="destination">Destination</label>
        <input type="text" id="destination" class="form-control" placeholder="Destination" required>
    </div>

    <div class="form-group">
        <label for="seats">AvailableSeats</label>
        <input type="number" id="seats" class="form-control" placeholder="Available Seats" required>
    </div>

    <div class="form-group">
        <label for="notes">Notes</label>
        <input type="text" id="notes" class="form-control" placeholder="Notes">
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit" id="Ride-Create">Create</button>
    </div>
</form>

@section scripts {
    <script type="text/javascript" src="~/Content/js/ride.js"></script>
}